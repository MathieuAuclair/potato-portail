                @Html.ValidationMessageFor(m => m.OrdreDuJour.HeureDebutReunion, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.OrdreDuJour.HeureFinReunion)
